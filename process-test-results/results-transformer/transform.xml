<?xml version="1.0" encoding="UTF-8"?>
<!-- In the future may need to fix the testsuite results to have proper data, but as of now it's irrelevant to allure2,
     since Allure2 does it's own calculations/counts -->
<xsl:stylesheet version="1.0"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:output method="xml" indent="yes" encoding="UTF-8"/>


    <xsl:template match="testcase">
      <testsuite name="{../@name}" tests="1" disabled="0" errors="0" failures="0" timestamp="{@timestamp}" time="{@time}">
          <testcase name="{@name}" classname="{@classname}" time="{@time}">
             <xsl:apply-templates select="node()"/>
          </testcase>
      </testsuite>
    </xsl:template>
    <xsl:template match="testsuites">
        <testsuites>
            <xsl:apply-templates select="testsuite/testcase"/>
        </testsuites>
    </xsl:template>

<xsl:template match="flakyFailure">
  <rerunFailure>
    <xsl:attribute name="type">
      <xsl:value-of select="@type"/>
    </xsl:attribute>
    <xsl:attribute name="message">
      <xsl:value-of select="'failure'"/>
    </xsl:attribute>
System Out:

    <xsl:value-of select="system-out/text()"/>

System Error:

    <xsl:value-of select="system-err/text()"/>
  </rerunFailure>
</xsl:template>

<xsl:template match="rerunFailure">
  <rerunFailure>
    <xsl:attribute name="type">
      <xsl:value-of select="@type"/>
    </xsl:attribute>
    <xsl:attribute name="message">
      <xsl:value-of select="'failure'"/>
    </xsl:attribute>
System Out:

    <xsl:value-of select="system-out/text()"/>

System Error:

    <xsl:value-of select="system-err/text()"/>
  </rerunFailure>
</xsl:template>

<xsl:template match="flakyError">
  <rerunError>
    <xsl:attribute name="type">
      <xsl:value-of select="@type"/>
    </xsl:attribute>
    <xsl:attribute name="message">
      <xsl:value-of select="'error'"/>
    </xsl:attribute>
System Out:

    <xsl:value-of select="system-out/text()"/>

System Error:

    <xsl:value-of select="system-err/text()"/>
  </rerunError>
</xsl:template>


<xsl:template match="rerunError">
  <rerunError>
    <xsl:attribute name="type">
      <xsl:value-of select="@type"/>
    </xsl:attribute>
    <xsl:attribute name="message">
      <xsl:value-of select="'error'"/>
    </xsl:attribute>
System Out:

    <xsl:value-of select="system-out/text()"/>

System Error:

    <xsl:value-of select="system-err/text()"/>
  </rerunError>
</xsl:template>

<xsl:template match="error">
  <error>
    <xsl:attribute name="type">
      <xsl:value-of select="@type"/>
    </xsl:attribute>
    <xsl:attribute name="message">
      <xsl:value-of select="'error'"/>
    </xsl:attribute>
System Out:

    <xsl:value-of select="../system-out/text()"/>

System Error:

    <xsl:value-of select="../system-err/text()"/>
  </error>
</xsl:template>


<xsl:template match="failure">
  <failure>
    <xsl:attribute name="type">
      <xsl:value-of select="@type"/>
    </xsl:attribute>
    <xsl:attribute name="message">
      <xsl:value-of select="'error'"/>
    </xsl:attribute>
System Out:

    <xsl:value-of select="../system-out/text()"/>

System Error:

    <xsl:value-of select="../system-err/text()"/>
  </failure>
</xsl:template>



</xsl:stylesheet>
